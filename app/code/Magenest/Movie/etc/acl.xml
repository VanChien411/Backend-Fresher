<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_Movie::movie" title="Movie" sortOrder="100">
                    <resource id="Magenest_Movie::director" title="Director" sortOrder="10"/>
                    <resource id="Magenest_Movie::actor" title="Actor" sortOrder="20"/>
                    <resource id="Magenest_Movie::movie_list" title="Movie List" sortOrder="30"/>
                    <!-- Integration -->
                    <resource id="Magenest_Movie::integration" title="Integration" sortOrder="40">
                        <resource id="Magenest_Movie::section_1" title="Section #1" sortOrder="10"/>
                        <resource id="Magenest_Movie::section_2" title="Section #2" sortOrder="20"/>
                        <resource id="Magenest_Movie::section_3" title="Section #3" sortOrder="30"/>
                        <resource id="Magenest_Movie::blank_page" title="Blank Page" sortOrder="40"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
