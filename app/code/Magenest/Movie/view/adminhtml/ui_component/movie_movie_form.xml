<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">movie_movie_form.movie_movie_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/save</item>
            </item>
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/index</item>
            </item>

        </item>
    </argument>
    <settings>
        <namespace>movie_movie_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>movie_movie_form.movie_movie_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="movie_movie_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Movie\Model\DataProvider\Movie\FormDataProvider</argument>
            <argument name="name" xsi:type="string">movie_movie_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">movie_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Movie Information</label>
        </settings>
        <field name="movie_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>data.movie_id</dataScope>
            </settings>
        </field>
        <field name="name" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Movie Name</label>
                <dataScope>data.name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="description" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
                <dataScope>data.description</dataScope>
            </settings>
        </field>
        <field name="rating" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Rating</label>
                <dataScope>data.rating</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="null" xsi:type="array">
                                <item name="value" xsi:type="string"></item>
                                <item name="label" xsi:type="string">Select Rating</item>
                            </option>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">0</item>
                                <item name="label" xsi:type="string">0 Rating</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">1 Rating</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">2 Ratings</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">3 Ratings</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">4</item>
                                <item name="label" xsi:type="string">4 Ratings</item>
                            </option>
                            <option name="5" xsi:type="array">
                                <item name="value" xsi:type="string">5</item>
                                <item name="label" xsi:type="string">5 Ratings</item>
                            </option>
                            <option name="6" xsi:type="array">
                                <item name="value" xsi:type="string">6</item>
                                <item name="label" xsi:type="string">6 Ratings</item>
                            </option>
                            <option name="7" xsi:type="array">
                                <item name="value" xsi:type="string">7</item>
                                <item name="label" xsi:type="string">7 Ratings</item>
                            </option>
                            <option name="8" xsi:type="array">
                                <item name="value" xsi:type="string">8</item>
                                <item name="label" xsi:type="string">8 Ratings</item>
                            </option>
                            <option name="9" xsi:type="array">
                                <item name="value" xsi:type="string">9</item>
                                <item name="label" xsi:type="string">9 Ratings</item>
                            </option>
                            <option name="10" xsi:type="array">
                                <item name="value" xsi:type="string">10</item>
                                <item name="label" xsi:type="string">10 Ratings</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="director_id" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Director</label>
                <dataScope>data.director_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Magenest\Movie\Model\Source\DirectorOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>